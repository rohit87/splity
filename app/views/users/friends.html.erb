           <div class="input-group input-group-m">
             <span class="input-group-addon">@</span>
             <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
             <input type="email" class="form-control" name="friend[email]" id="txtAddFriend" value="" placeholder="add friend via email" autofocus required autocomplete="off">
               <span class="input-group-btn">
                 <button class="btn btn-primary" id="btnSearch">Add</button>
               </span>
           </div>
         </div>
      </div>
      </div>
      <div class="panel-body" id="friendsContainer">

        <% @friends.each do |friend| %>
          <div class="col-md-4">
            <%= render partial: "users/partials/friend_as_block", locals: { friend: friend } %>
          </div>
        <% end %>

        <div class="col-md-4">
          <div href="javascript:void(0)" class="friend-block-container add-friend" style="display: none;">
            <div class="friend-preview pull-left">
              <img width="80" height="80" class="img-thumbnail" src="http://placecage.com/c/80/80">
            </div>
            <h4 class="friend-block-friend-name">Press Enter to Add Friend</h4>
            <h5 class="friend-block-friend-email">(Or click on the 'Add' button)</h5>
            <div style="clear: both"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script type="text/x-template" id="tmplFriendBlock">
  {{#friends}}
  <div class="col-md-4">
    <a href="{{profile_url}}" class="friend-block-container">
      <div class="friend-preview pull-left">
        <img src="{{profilePictureUrl}}">
      </div>
      <h4 class="friend-block-friend-name">{{firstname}} {{lastname}}</h4>
      <h5 class="friend-block-friend-email">{{email}}</h5>
      <span class="glyphicon glyphicon-remove friend-block-remove-friend" title="Remove Friend"></span>
      <div style="clear: both"></div>
    </a>
  </div>
  {{/friends}}
</script>