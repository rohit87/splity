<div class="row" style="margin-bottom: 10px;">
  <div class="col-xs-4">
    <img src="<%= profile_picture_url_for user, 80 %>" class="img-responsive" height="80" width="80" alt="<%= user.name %>">
  </div>
  <div class="col-xs-8">
    <h4><%= user.name %></h4>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown">
        <i class="glyphicon glyphicon-th"></i>&nbsp; Quick Links &nbsp;&nbsp;<span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to user_create_activity_path(current_user) do %>
          <i class="glyphicon glyphicon-plus"></i> Create Activity
        <% end %></li>
        <li class="divider"></li>
        <li><%= link_to "javascript:void(0)" do
          content_tag :span, "Delete Your Account", class: "text-danger", onclick: "runnit()"
        end %></li>
        <li><a href="<%= logout_path %>">Logout</a>
      </ul>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 20px">
  <div class="col-xs-12">
    <div class="list-group">
      <a href="<%= homepage_url %>" class="list-group-item"><span class="badge"><%= user.activities.count %></span>Activities</a>
      <a href="<%= friends_user_url user %>" class="list-group-item"><span class="badge"><%= user.friends.count %></span>Friends</a>
    </div>
  </div>
</div>