<!DOCTYPE html>
<html>
<head>
  <title>Splity</title>

  <%= stylesheet_link_tag    "application", media: "all" %>
  
  <script type="text/javascript">
    var params = <%= { controller: params[:controller], action: params[:action] }.to_json.html_safe %>
    var current_user = <%= signed_in? ? { id: current_user.id }.to_json.html_safe : {}.to_json %>
  </script>

  <%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?libraries=places&sensor=true" %>
  <%= javascript_include_tag "application" %>

  <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>

<body>

  <%= render partial: '/layouts/partials/navbar' %>

  <div class="container">
  
    <div class="page-header" id="banner">
      <div class="row">
        <div class="col-lg-6">
          <h1>Simplex</h1>
          <p class="lead">Mini and minimalist</p>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <% if signed_in? %>
            <%= link_to "Activities", user_activities_url(current_user), class: "btn btn-primary" %>
            <%= link_to "Friends", friends_user_url(current_user), class: "btn btn-primary" %>
            <a href="javascript:void(0)" onclick="runnit()">Delete your account!</a>
          <% end %>
        </div>
      </div>
    </div>
    
    <% flash.each do |key, value| %>
    <div class="alert alert-dismissable alert-<%= key %>">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= value %>
    </div>
    <% end %>

    <%# Page Content %>
    <%= yield %>

  </div>

  <!-- Common -->
  <rubbbish>
    <%= render partial: "/partials/modal" %>
  </rubbbish>

  <% if Rails.env.development? %>
  <div class="well well-lg col-lg-8 col-lg-offset-2">
    <%= debug(params) %>
  </div>
  <% if @dashboard.present? %>
  <div class="well well-lg col-lg-8 col-lg-offset-2">
    <pre><code><script type="text/javascript">document.write(JSON.stringify(<%= raw @dashboard.to_json if @dashboard.present? %>, null, 2))</script></code></pre>
  </div>
  <% end %>
  <% end %>
  <% if GlobalConstants::JavascriptsProvided[params[:controller]] == params[:action] %>
    <%= javascript_include_tag "#{params[:controller]}/#{params[:action]}" %>
  <% end %>
  <%= finalize_javascripts %>
</body>
</html>