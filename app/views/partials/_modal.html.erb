<div id="tmplBasicModal">
  <div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          {{#canSkip}}<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>{{/canSkip}}
          <h4 class="modal-title" id="myModalLabel">{{{title}}}</h4>
        </div>
        <div class="modal-body">
          {{{content}}}
        </div>
        <div class="modal-footer">
          {{#buttons}}
            {{^closeModal}}
            <button type="button" class="btn btn-{{type}} modal-button">{{text}}</button>
            {{/closeModal}}
            {{#closeModal}}
            <button type="button" class="btn btn-{{type}} modal-button" data-dismiss="modal">{{text}}</button>
            {{/closeModal}}
          {{/buttons}}
        </div>
      </div>
    </div>
  </div>
</div>